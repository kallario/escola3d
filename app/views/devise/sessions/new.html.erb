  								</div>
  							</div>
  						</div><!--/.col-md-6-->
  					</div>
        </div>

				<div class="col-md-4 col-sm-12">

              <div class="col-sm-12 form-box">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              			<div class="login-form">

                      <h3>Entrar no Sistema</h3>

              				<div class="control-group">
                        <%= f.email_field :email, autofocus: true, class: 'form-control form-control-lg', placeholder: 'Informe o seu email' %>
              				</div>

              				<div class="control-group">
                        <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg', placeholder: 'Informe a sua senha' %>
              				</div>

                      <div class="control-group">
              				   <%= f.submit "Entrar", class: 'btn btn-lg' %>
                      </div>

                      <center>
                      <%= render "devise/shared/links" %>
                      </center>

              			</div>

                    <% end -%>

            </div>
			</div>
		</div>
  </div>

</section>
